---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Thinksolvhero from '../components/landing/thinksolvHero.astro';
import SectionOne from '../components/landing/SectionOne.astro';
const metadata = {
  title: 'Google Docs to PDF',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get started for free',
        href: 'https://workspace.google.com/marketplace/app/docs_to_pdf/302636103705?utm_source=docstopdf.pro&utm_medium=home_page_cta',
        target: '_blank',
      },
      { text: 'Learn more', href: '#features' },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">Bulk convert</span> Google Docs to PDF
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span>Docs to PDF Pro</span> is a Google Docs editor add on that allows you to convert multiple Google Docs into
        PDF in a single click.
      </span>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with Docs to PDF"
    subtitle=""
    items={[
      {
        title: 'Bulk convert Google Docs',
        description: 'Converts Google Docs into PDF seamlessly',
        icon: 'tabler:file-type-doc',
      },
      {
        title: 'Zip file download',
        description: 'Downloads created PDF files automatically as a single zip file',
        icon: 'tabler:file-type-zip',
      },
      {
        title: 'Customizable output settings',
        description: 'Provides customizable settings for the conversion process',
        icon: 'tabler:settings-cog',
      },
      {
        title: 'User friendly interface',
        description: 'Provides best user friendly interface for conversion',
        icon: 'tabler:user-heart',
      },
      {
        title: 'Private & secure',
        description:
          'Conversion happens inside your own Google account. The files are not updated to any of our servers for conversion',
        icon: 'tabler:lock',
      },
      {
        title: 'We keep improving',
        description:
          'We listen to users. Do you have a feature request that can improve the add-on? Get in touch with us to implement it.',
        icon: 'tabler:ear',
      },
    ]}
  />

  <!-- <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`The blog is used to display AstroWind documentation.
                        Each new article will be an important step that you will need to know to be an expert in creating a website using Astro + Tailwind CSS.
                        Astro is a very interesting technology. Thanks.
                `}
  />-->

  <!-- FAQs Widget ******************* -->

  <FAQs
    title=""
    subtitle="Know more about Docs to PDF"
    tagline="Frequently Asked Questions"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Why Docs to PDF?',
        description:
          'Docs to PDF is the only add that offers private and secure conversion of the Google Docs to PDF file',
      },
      {
        title: 'What do I need to start?',
        description: "Install the add-on and get started immediately. You doesn't have to do anything else.",
      },
      {
        title: 'How to install the Docs to PDF Add on?',
        description: 'Use the link available below to install the add-on from the Google Workspace Marketplace',
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <!--<Stats
    stats={[
      { title: 'Downloads', amount: '132K' },
      { title: 'Stars', amount: '24.8K' },
      { title: 'Forks', amount: '10.3K' },
      { title: 'Users', amount: '48.4K' },
    ]}
  />-->

  <!-- CallToAction Widget *********** -->

  <CallToAction>
    <Fragment slot="title">
      Ready to get started?<br /><br /><br class="block sm:hidden" /><span class="sm:whitespace-nowrap"></span>
      <a
        href="https://workspace.google.com/marketplace/app/docs_to_pdf/302636103705?pann=b&utm_source=docstopdf.pro&utm_medium=ready_to_get_started_section"
        target="_blank"
        aria-label="Get it from the Google Workspace Marketplace"
        style="display: flex; justify-content: center;"
      >
        <img
          alt="Google Workspace Marketplace badge"
          alt-text="Get it from the Google Workspace Marketplace"
          src="https://workspace.google.com/static/img/marketplace/en/gwmBadge.svg?"
          style="height: 68px;"
        />
      </a>
    </Fragment>

    <Fragment slot="subtitle"> </Fragment>
  </CallToAction>
  
</Layout>
